{
    "name": "mixerapi/collection-view",
    "description": "A simple Collection View for displaying pagination meta data in JSON or XML collection responses",
    "type": "cakephp-plugin",
    "license": "MIT",
    "keywords": ["cakephp"],
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "^4.0",
        "adbario/php-dot-notation": "^2.2"
    },
    "require-dev": {
        "ext-json": "*",
        "ext-xml": "*",
        "ext-simplexml": "*",
        "cakephp/cakephp-codesniffer": "^4.2",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan": "^0.12.64",
        "phpunit/phpunit": "~8.5.0"
    },
    "autoload": {
        "psr-4": {
            "MixerApi\\CollectionView\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MixerApi\\CollectionView\\Test\\": "tests/",
            "MixerApi\\CollectionView\\Test\\App\\": "tests/test_app/src"
        }
    },
    "scripts": {
        "analyze": [
            "@test",
            "@phpcs",
            "@phpstan"
        ],
        "phpcs": "vendor/bin/phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/",
        "phpbf": "vendor/bin/phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/",
        "phpstan": "vendor/bin/phpstan analyse src/",
        "test": "vendor/bin/phpunit --colors=always",
        "md": "vendor/bin/phpmd src/ ansi phpmd.xml",
        "coverage": "vendor/bin/phpunit --coverage-html coverage-reports/"
    },
    "support": {
        "source": "https://github.com/mixerapi/collection-view"
    },
    "authors": [
        {
            "name": "MixerApi",
            "role": "Organization"
        }
    ]
}
