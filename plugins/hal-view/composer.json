{
    "name": "mixerapi/hal-view",
    "description": "A Hypertext Application Language (HAL+JSON) view for CakePHP.",
    "type": "cakephp-plugin",
    "license": "MIT",
    "keywords": ["cakephp","cakephp view","cakephp hal","cakephp hal json","hypertext applicatoin language"],
    "require": {
        "php": "^8.1",
        "cakephp/cakephp": "^5.0",
        "mixerapi/core": "^2.0"
    },
    "require-dev": {
        "josegonzalez/dotenv": "^3.2",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "MixerApi\\HalView\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MixerApi\\HalView\\": "plugins/hal-view/src/",
            "MixerApi\\HalView\\Test\\": "plugins/hal-view/tests/",
            "MixerApi\\HalView\\Test\\App\\": "plugins/hal-view/tests/test_app/src/"
        }
    },
    "support": {
        "issues": "https://github.com/mixerapi/mixerapi-dev/issues",
        "source": "https://github.com/mixerapi/hal-view"
    },
    "authors": [
        {
            "name": "MixerApi",
            "role": "Organization"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cakephp/plugin-installer": true
        }
    }
}
