{
    "name": "mixerapi/core",
    "description": "MixerAPI Core libraries",
    "type": "library",
    "license": "MIT",
    "keywords": ["mixerapi","cakephp"],
    "require": {
        "php": "^8.0",
        "cakephp/cakephp": "^4.2",
        "thecodingmachine/class-explorer": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "MixerApi\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MixerApi\\Core\\": "plugins/core/src/",
            "MixerApi\\Core\\Test\\": "plugins/core/tests/",
            "MixerApi\\Core\\Test\\App\\": "plugins/core/tests/test_app/src/"
        }
    },
    "support": {
        "issues": "https://github.com/mixerapi/mixerapi-dev/issues",
        "source": "https://github.com/mixerapi/core"
    },
    "authors": [
        {
            "name": "MixerApi",
            "role": "Organization"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cakephp/plugin-installer": true,
            "phpro/grumphp": true
        }
    }
}
