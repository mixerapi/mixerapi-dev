{
    "name": "mixerapi/exception-render",
    "description": "Handles rendering entity validation errors and other exceptions for your API",
    "type": "cakephp-plugin",
    "license": "MIT",
    "keywords": ["cakephp","cakephp error handling","cakephp exception handling"],
    "require": {
        "php": "^8.0",
        "cakephp/cakephp": "^4.2"
    },
    "require-dev": {
        "cnizzardini/cakephp-swagger-bake": "^2.1",
        "josegonzalez/dotenv": "^3.2",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "MixerApi\\ExceptionRender\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MixerApi\\ExceptionRender\\": "plugins/exception-render/src/",
            "MixerApi\\ExceptionRender\\Test\\": "plugins/exception-render/tests/",
            "MixerApi\\ExceptionRender\\Test\\App\\": "plugins/exception-render/tests/test_app/src/"
        }
    },
    "support": {
        "issues": "https://github.com/mixerapi/mixerapi-dev/issues",
        "source": "https://github.com/mixerapi/exception-render"
    },
    "authors": [
        {
            "name": "MixerApi",
            "role": "Organization"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cakephp/plugin-installer": true,
            "phpro/grumphp": true
        }
    }
}
